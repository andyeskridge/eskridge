{
  "$schema": "https://biomejs.dev/schemas/2.3.0/schema.json",
  "extends": ["ultracite"],
  "files": {
    "includes": [
      "**",
      "!**/tina/tina-lock.json",
      "!**/cloudflare-env.d.ts",
      "!**/bun.lock",
      "!**/renovate.json"
    ]
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2
  },
  "overrides": [
    {
      "includes": ["src/styles/tailwind.css"],
      "linter": {
        "rules": {
          "suspicious": {
            "noUnknownAtRules": "off"
          }
        }
      }
    }
  ],
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "javascript": {
    "globals": ["KVNamespace", "Fetcher"]
  }
}
