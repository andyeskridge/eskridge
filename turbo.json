{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "_build": {
      "outputs": [".next/**"],
      "env": ["NEXT_PUBLIC_SITE_URL"],
      "inputs": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "next.config.mjs",
        "package.json",
        "tsconfig.json",
        "pnpm-lock.yaml",
        ".env"
      ]
    },
    "_lint": {
      "outputs": []
    }
  }
}
